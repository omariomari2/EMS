{
  "name": "more-nutrition-matcha",
  "version": "1.0.0",
  "type": "module",
  "description": "More Nutrition Iced Matcha Latte landing page",
  "main": "dist/server.js",
  "scripts": {
    "build:client": "esbuild src/client.jsx --bundle --outfile=public/dist/client.js --loader:.js=jsx --jsx=automatic --minify --sourcemap",
    "build:server": "esbuild server.js --bundle --outfile=dist/server.js --platform=node --external:express --external:compression --loader:.jsx=jsx --format=esm --jsx=automatic --minify",
    "build": "npm run build:client && npm run build:server",
    "start": "npm run build && node dist/server.js",
    "dev": "npm run build && node --watch dist/server.js",
    "watch": "node scripts/dev-watch.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "chokidar": "^3.6.0",
    "esbuild": "^0.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
